// BoxResultsCard.test.tsx
import React from "react";
import { render, screen } from "@testing-library/react";
import "@testing-library/jest-dom/extend-expect";
import BoxResultsCard from "../BoxResultsCard";

const mockBoxResult = {
  box: "BOX A",
  products: [
    { id: 1, name: "Wireless Mouse", quantity: 2 },
    { id: 2, name: "Gaming Keyboard", quantity: 1 },
  ],
};

describe("BoxResultsCard", () => {
  it("should display the box name and the list of products packed", () => {
    render(
      <BoxResultsCard
        box={mockBoxResult.box}
        products={mockBoxResult.products}
      />
    );

    // Check if box name is displayed
    expect(screen.getByText("BOX A")).toBeInTheDocument();

    // Check if product names and quantities are displayed
    expect(
      screen.getByText("Wireless Mouse (Quantity: 2)")
    ).toBeInTheDocument();
    expect(
      screen.getByText("Gaming Keyboard (Quantity: 1)")
    ).toBeInTheDocument();
  });
});
